# Example environment variables
# Copy this file to .env.local and adjust values as needed

# Development server port (default: 3000)
PORT=3000

# Supabase Configuration (for screenshot service)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
SUPABASE_SECRET_KEY=your_supabase_secret_key

# Screenshot Service API
SCREENSHOT_API_SECRET=your_screenshot_api_secret_key

# AI Configuration
# 智谱AI配置 (必需)
ZHIPU_AI_API_KEY=your_zhipu_api_key_here
ZHIPU_AI_BASE_URL=https://open.bigmodel.cn
ZHIPU_AI_MODEL=glm-4

# AI功能开关
ENABLE_STREAMING=true
ENABLE_FUNCTION_CALLING=true
MAX_CONVERSATION_LENGTH=50

# 备用AI提供者 (可选)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
